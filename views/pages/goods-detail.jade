extends ../layout

block content
    .container
        .row
            form.form-horizontal(method="post",action="/goods/new")
                input(type="hidden",name="goods[_id]",value="#{goods._id}")
                .form-group
                    label.col-sm-2.control-label(for="inputId") 商品编号
                    .col-sm-5
                        input#inputId.form-control(type="text",name="goods[_id]",value="#{goods._id}",readonly="readonly")
                .form-group
                    label.col-sm-2.control-label(for="inputType") 商品类型
                    .col-sm-5
                        input#inputType.form-control(type="text",name="goods[type]",value="#{goods.type}")
                .form-group
                    label.col-sm-2.control-label(for="inputWarehouse") 仓库位置
                    .col-sm-5
                        input#inputWarehouse.form-control(type="text",name="goods[warehouse]",value="#{goods.warehouse}")
                .form-group
                    label.col-sm-2.control-label(for="inputOther") 备注
                    .col-sm-5
                        input#inputOther.form-control(type="text",name="goods[other]",value="#{goods.other}")
                .form-group
                    .col-sm-offset-2.col-sm-5
                        button.btn.btn-default(type="submit") 修改